<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row pr-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <%= f.text_field :username, class: "col-10 form-control shadow rounded", placeholder: "Enter a username" %>
        </div>
        <div class="form-group row pr-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <%= f.email_field :email, class: "col-10 form-control shadow rounded", placeholder: "Enter your email"  %>
        </div>
        <div class="form-group row pr-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <%= f.password_field :password, class: "col-10 form-control shadow rounded", placeholder: "Choose a password"  %>
        </div>
        <div class="form-group row justify-content-center pr-3">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info"  %>
    </div>
  </div>
</div>
